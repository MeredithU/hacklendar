<div class="row-fluid">

  <div class="span7 offset1">

    <%= render "calendar" %>

  </div>

  <div class="span3">
    <!-- create and populate the table with all diary entries -->
    <div class="hero-unit">
      <% @diary_entries.each do |d| %>

        <p><h3><%= d.created_at.strftime("%B %d, %Y") %></h3></p>

        <% if (!d.created_at.blank?) %>
          <p><%= d.title %></p>
          <p><%= d.description %></p>
        <% else %>
            <p>Sorry! You didn't put in an entry for today.<p>
        <% end %>
      <% end %>
    </div>


    <!-- Adding new diary entry button -->
    <%= link_to new_diary_entry_path do %>
      <button class="btn btn-primary" data-toggle="modal" data-target="#myModal">New Entry</button>
    <% end %>


    <!-- Modal for New Entry -->
    <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h3 id="myModalLabel">New Calendar Entry</h3>
      </div>

      <div class="modal-body">

      </div>


      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <button class="btn btn-primary">Save changes</button>
      </div>

    </div>
  </div>
</div>












